#!/bin/zsh
export EDITOR="nvim"
export TERMINAL="st"
export BROWSER="firefox"
export READER="zathura"
export PAGER="less"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

export GOPATH="$HOME/go"

export PATH="$PATH:$HOME/.local/bin/wb:$HOME/.local/bin:$GOPATH/bin:$HOME/nb/wbvpn"
export PATH="$XDG_CONFIG_HOME/dwmblocks/programs:$PATH"

export _JAVA_AWT_WM_NONREPARENTING=1
export QTWEBENGINE_DISABLE_SANDBOX=1

[ "$(tty)" = "/dev/tty1" ] && ! pidof -s Xorg >/dev/null 2>&1 && exec startx "$XINITRC"

[ -f "$XDG_CONFIG_HOME/zsh/secret_profile" ] && source "$XDG_CONFIG_HOME/zsh/secret_profile"
