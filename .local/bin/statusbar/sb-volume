#!/bin/sh

case $BLOCK_BUTTON in
  1) setsid -f "$TERMINAL" -e ncpamixer ;;
  2) pamixer -t ;;
  4) pamixer --allow-boost -i 1 ;;
  5) pamixer --allow-boost -d 1 ;;
  6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(pamixer --get-volume)"
icon="ðŸ”Š"
[ "$vol" -le "0" ] && icon="ðŸ”ˆ"
[ "$vol" -le "20" ] && icon="ðŸ”‰"
[ $(pamixer --get-mute) = true ] && icon="ðŸ”‡"

echo "$icon$vol"
